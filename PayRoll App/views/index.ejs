<!DOCTYPE html>
<html>
<head>
  <title>Employee Payroll</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="navbar">
  EMPLOYEE PAYROLL
</div>

<div class="main-container">

  <div class="header-row">
    <h2>Employee Details</h2>
    <a href="/add" class="add-btn">+ Add User</a>
  </div>

  <div class="cards">
    <div class="card">
      <p>Total Employees</p>
      <h3><%= totalEmployees %></h3>
    </div>

    <div class="card">
      <p>Total Salary</p>
      <h3>₹ <%= totalSalary %></h3>
    </div>

    <div class="card">
      <p>Total Tax (10%)</p>
      <h3>₹ <%= totalTax %></h3>
    </div>

    <div class="card">
      <p>Total Net Salary</p>
      <h3>₹ <%= totalNet %></h3>
    </div>
  </div>

  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Department</th>
          <th>Salary</th>
          <th>Tax</th>
          <th>Net Salary</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(emp => { 
          const tax = emp.salary * 0.10;
          const net = emp.salary - tax;
        %>
        <tr>
          <td><%= emp.name %></td>
          <td><%= emp.department %></td>
          <td>₹ <%= emp.salary %></td>
          <td>₹ <%= tax %></td>
          <td>₹ <%= net %></td>
          <td>
            <a href="/edit/<%= emp.id %>" class="edit-btn">Edit</a>
            <a href="/delete/<%= emp.id %>" class="delete-btn">Delete</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</div>

</body>
</html>
